@using Microsoft.AspNetCore.Mvc.Rendering
@model DNetCMS.Models.ViewModels.CreateUserViewModel

@{
    ViewBag.Title = "Создать пользователя";
}

<h2>Создать пользователя</h2>

<form asp-action="Create">
    <div>
        @Html.DisplayFor(x => x.Email)
        @Html.EditorFor(x => x.Email)
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        @Html.DisplayFor(x => x.Password)
        @Html.EditorFor(x => x.Password)
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        @Html.DisplayFor(x => x.RepeatPassword)
        @Html.EditorFor(x => x.RepeatPassword)
        <span asp-validation-for="RepeatPassword"></span>
    </div>
    
    <input type="submit" value="Создать"/>
</form>

