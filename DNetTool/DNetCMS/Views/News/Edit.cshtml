@model DNetCMS.Models.ViewModels.NewsViewModel

@{
    ViewData["Title"] = "Изменить новость";
    Layout = "_AdminLayout";
}

<div>
    <a asp-action="Index">Обратно к списку</a>
</div>

<h2>Измените вашу новость:</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" asp-controller="News" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group post-control__field">
                <label asp-for="Header" class="control-label post-control__label"></label>
                <input asp-for="Header" class="form-control post-control__control" />
                <span asp-validation-for="Header" class="text-danger"></span>
            </div>
            <div class="form-group post-control__field">
                <label asp-for="Content" class="control-label post-control__label"></label>
                <textarea asp-for="Content" class="form-control post-control__control post-control__textarea" ></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="post-control__load">
                <h6>Загрузите картинку</h6>
                <input type="file" asp-for="Picture"/><br>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-default post-control__button" />
            </div>
        </form>
    </div>
</div>