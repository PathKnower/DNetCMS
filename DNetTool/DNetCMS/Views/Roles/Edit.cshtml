@model DNetCMS.Models.ViewModels.Roles.ChangeRoleClaims

@{
    ViewData["Title"] = "Редактирование роли";
}

<h2>Редактирование роли</h2>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(x => x.Id)
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedAccessLevel" class="control-label"></label>
                @Html.RadioButtonFor(x => x.SelectedAccessLevel, Model.Claims)
                <span asp-validation-for="SelectedAccessLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

