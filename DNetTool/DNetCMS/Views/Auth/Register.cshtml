@model DNetCMS.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="text-center mb-4 m-4">
    <h2 class="h2 mb-3 font-weight-normal">Регистрация</h2>
</div>

<form class="form-signin" asp-controller="Auth" asp-action="Register">
    
    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible"></div>

    <div class="form-label-group m-2" >
        <input asp-for="Email" type="email" placeholder="Email" required="" class="form-control"/>
        <span asp-validation-for="Email"></span>
    </div>
    
    <div class="form-label-group m-2" >
        <input asp-for="Username" type="text" class="form-control" required="" placeholder="Имя пользователя"/>
        <span asp-validation-for="Username"></span>
    </div>
    
    <div class="form-label-group m-2" >
        <input asp-for="Password" type="password" class="form-control" required="" placeholder="Пароль"/>
        <span asp-validation-for="Password"></span>
    </div>
    
    <div class="form-label-group m-2" >
        <input asp-for="PasswordConfirm" type="password" class="form-control" required="" placeholder="Повтор пароля"/>
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    
    
    <div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Регистрация</button>
    </div>
</form>