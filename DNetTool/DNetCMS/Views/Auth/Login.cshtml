@model DNetCMS.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Вход";
}

<div class="text-center mb-4 m-4">
    <h2 class="h2 mb-3 font-weight-normal">Авторизация</h2>
</div>

<form class="form-signin" asp-controller="Auth" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    @* TODO: Поправить окошко входа *@
    
    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible"></div>

    <input id="Username" asp-for="Username" class="form-control" placeholder="Имя пользователя" required=""
           autofocus="" type="text"/>

    <input id="Password" asp-for="Password" class="form-control" placeholder="Пароль" required=""
           autofocus="" type="password"/>

    <div class="form-label-group mb-2 m-2">
        <label for="RememberMe">
            <input id="RememberMe" asp-for="RememberMe"/>
            Запомнить меня
        </label>
    </div>
    <div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
    </div>
</form>